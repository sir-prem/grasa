<%- include('_header.ejs') %>

<h1>Sign up</h1>

<table width="100%">
    <form action="/signup" method="post" enctype="multipart/form-data">
    <tr>
        <td class="reqfield">Username:</td>
        <td>
            <input name="username" type="text" class="form-control"
            placeholder="Username" required autofocus>
        </td>
    </tr>
    <tr>
        <td class="reqfield">Password:</td>
        <td>
            <input name="password" type="password" class="form-control"
            placeholder="Password" required>
        </td>
    </tr>
    <tr>
        <td class="reqfield">Given name:</td>
        <td>
            <input name="given" type="text" class="form-control"
            placeholder="Given name" required>
        </td>
    </tr>
    <tr>
        <td>Middle name:</td>
        <td>
            <input name="middle" type="text" class="form-control"
            placeholder="Middle name">
        </td>
    </tr>
    <tr>
        <td class="reqfield">Family name:</td>
        <td>
            <input name="family" type="text" class="form-control"
            placeholder="Family name" required>
        </td>
    </tr>

    <tr>
        <td class="reqfield">Date of birth:</td>
        <td>
            <input name="dob" type="date" class="form-control"
            placeholder="Date of Birth" required>
        </td>
    </tr>

    <tr>
        <td class="reqfield" class="reqfield">Street:</td>
        <td>
            <input name="street" type="text" class="form-control"
            placeholder="Street" required>
        </td>
    </tr>
    <tr>
        <td class="reqfield">City:</td>
        <td>
            <input name="city" type="text" class="form-control"
            placeholder="City" required>
        </td>
    </tr>
    <tr>
        <td class="reqfield">State:</td>
        <td>
            <select name="state" required>
                <option value="">Choose...</option>
                <option value="NSW">NSW</option>
                <option value="VIC">VIC</option>
                <option value="QLD">QLD</option>
                <option value="ACT">ACT</option>
                <option value="SA">SA</option>
                <option value="NT">NT</option>
                <option value="WA">WA</option>
                <option value="TAS">TAS</option>
            </select>
        </td>
    </tr>
    <tr>
        <td class="reqfield">Postcode:</td>
        <td>
            <input name="postcode" type="number" class="form-control"
            placeholder="Postcode" required>
        </td>
    </tr>

    <tr>
        <td class="reqfield">Mobile:</td>
        <td>
            <input name="mobile" type="number" class="form-control"
            placeholder="0411222333" required>
        </td>
    </tr>

    <tr>
        <td class="reqfield">Email:</td>
        <td>
            <input name="email" type="email" class="form-control"
            placeholder="hello@abc.net" required>
        </td>
    </tr>

    <tr>
        <td class="reqfield">Profile Image:</td>
        <td>
            <input type="file" name="profile-image" value="" required>
        </td>
    </tr>

    <tr>
        <td colspan="2" align="right">
            <input type="submit" value="Sign up" class="btn btn-primary btn-block">
        </td>
    </tr>

    </form>
</table>


<%- include('_footer.ejs') %>